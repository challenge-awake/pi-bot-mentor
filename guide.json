  "version": "1.0",
  "sections": [
    {
      "id": "github-setup",
      "title": "1. Créer ton compte GitHub",
      "steps": [
        {
          "id": "create-account",
          "description": "Va sur github.com et crée un compte.",
          "command": "start https://github.com",
          "validation": {
            "type": "manual",
            "prompt": "As-tu créé ton compte ?"
          }
        },
        {
          "id": "install-git",
          "description": "Installe Git pour connecter ton PC à GitHub.",
          "command": "winget install Git.Git",
          "validation": {
            "type": "terminal_output",
            "check": "git version"
          }
        }
      ]
    }
  ]
}